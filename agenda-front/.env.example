# ===========================================
# API Configuration
# ===========================================
# For Android Emulator: http://10.0.2.2:8080
# For iOS Simulator / Web: http://localhost:8080
# For Physical Device: Use your computer's local IP (e.g., http://192.168.1.X:8080)
EXPO_PUBLIC_API_URL=http://localhost:8080

# API Timeout (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=10000

# ===========================================
# App Configuration
# ===========================================
# App Name (for display purposes)
EXPO_PUBLIC_APP_NAME=Agenda Escolar

# Default number of periods/tramos in schedule
EXPO_PUBLIC_DEFAULT_TRAMOS=12

# ===========================================
# Feature Flags (optional)
# ===========================================
# Enable debug mode
EXPO_PUBLIC_DEBUG_MODE=false

# Enable analytics (if you add analytics later)
EXPO_PUBLIC_ENABLE_ANALYTICS=false
